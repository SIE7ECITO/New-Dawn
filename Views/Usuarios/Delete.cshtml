@model NewDawn.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<head>
    <link rel="stylesheet" href="~/css/Usuarios/delete.css">
</head>

<body>
    <div class="container">
        <h1>Eliminar Usuario</h1>

        <h3>¿Estás seguro de que quieres eliminar este usuario?</h3>
        <div class="data">
            <h4>Detalles del Usuario</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Ccusuario)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Ccusuario)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NombreUsuario)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NombreUsuario)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Apellido)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Apellido)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NumeroTelUsuario)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NumeroTelUsuario)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Correo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Correo)
                </dd>

                <dt class="col-sm-2">
                    Estado
                </dt>
                <dd class="col-sm-10">
                    @(Model.EstadoUsuario ? "Activo" : "Inactivo")
                </dd>

                <dt class="col-sm-2">
                    Rol
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdrolNavigation.NombreRol)
                </dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Idusuario" />
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</body>
