@model NewDawn.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

<head>
    <link rel="stylesheet" href="~/css/Usuarios/create.css">
</head>

<body>
    <div class="containerR">
        <div class="form crear">
            <form asp-action="Create" method="post">
                <h2>CREAR USUARIO</h2>
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <input asp-for="Ccusuario" placeholder="Cédula de Usuario" />
                    <span asp-validation-for="Ccusuario" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="NombreUsuario" placeholder="Nombre" />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Apellido" placeholder="Apellido" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="NumeroTelUsuario" placeholder="Teléfono" type="tel" />
                    <span asp-validation-for="NumeroTelUsuario" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Correo" placeholder="Correo" type="email" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="ContraseñaUsuario" placeholder="Contraseña" type="password" />
                    <span asp-validation-for="ContraseñaUsuario" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <select asp-for="Idrol" asp-items="ViewBag.Idrol">
                        <option disabled selected>Selecciona un rol</option>
                    </select>
                    <span asp-validation-for="Idrol" class="text-danger"></span>
                </div>

                <button type="submit">Crear</button>
                <a asp-action="Index" class="registro">Volver a la lista</a>
            </form>
        </div>

        <div class="panel-container">
            <div class="panel">
                <div class="panel-panel panel-right">
                    <img src="https://cdn-icons-png.flaticon.com/512/5087/5087579.png" alt="User Illustration" />
                    <h3>¡Bienvenido al sistema!</h3>
                    <p>Llena el formulario para registrar un nuevo usuario.</p>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
