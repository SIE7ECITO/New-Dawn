@model NewDawn.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<h1>Detalles del Usuario</h1>

<div>
    <h4>Información del Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ccusuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ccusuario)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreUsuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreUsuario)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroTelUsuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroTelUsuario)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContraseñaUsuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContraseñaUsuario)
        </dd>

        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @(Model.EstadoUsuario ? "Activo" : "Inactivo")
        </dd>

        <dt class="col-sm-2">
            Rol
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdrolNavigation.NombreRol)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Idusuario" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>
