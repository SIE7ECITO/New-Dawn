@model NewDawn.Models.Huesped

@{
    ViewData["Title"] = "Detalles del Huésped";
}

<head>
    <link rel="stylesheet" href="~/css/Huespedes/Details.css" />
</head>

<div class="contenedor-formulario">
    <div class="formulario-header">
        <h2>Detalles del Huésped</h2>
    </div>

    <div class="grupo-formulario">
        <label>CC:</label>
        <div class="campo-detalle">@Model.Cchuesped</div>
    </div>

    <div class="grupo-formulario">
        <label>Nombre:</label>
        <div class="campo-detalle">@Model.NombreHuesped</div>
    </div>

    <div class="grupo-formulario">
        <label>Correo:</label>
        <div class="campo-detalle">@Model.Correo</div>
    </div>

    <div class="botonera">
        <a asp-action="Edit" asp-route-id="@Model.Idhuesped" class="btn-formulario">Editar</a>
    </div>

    <div class="volver">
        <a asp-action="Index">Volver a la lista</a>
    </div>
</div>
