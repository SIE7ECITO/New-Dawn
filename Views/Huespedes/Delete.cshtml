@model NewDawn.Models.Huesped

@{
    ViewData["Title"] = "Eliminar Huésped";
}

<head>
    <link href="~/css/Huespedes/Delete.css" rel="stylesheet" />
</head>

<div class="form-container">
    <h2 class="form-title">¿Estás seguro de eliminar este huésped?</h2>
    <p class="form-subtitle">Esta acción no se puede deshacer.</p>

    <div class="form-group">
        <label class="form-label">CC:</label>
        <div class="form-input">@Html.DisplayFor(model => model.Cchuesped)</div>
    </div>

    <div class="form-group">
        <label class="form-label">Nombre:</label>
        <div class="form-input">@Html.DisplayFor(model => model.NombreHuesped)</div>
    </div>

    <div class="form-group">
        <label class="form-label">Correo:</label>
        <div class="form-input">@Html.DisplayFor(model => model.Correo)</div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Idhuesped" />
        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-cancel">Cancelar</a>
        </div>
    </form>
</div>
