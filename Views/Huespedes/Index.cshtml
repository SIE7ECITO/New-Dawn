@model IEnumerable<NewDawn.Models.Huesped>

@{
    ViewData["Title"] = "Lista de Huéspedes";
    var searchCc = Context.Request.Query["searchCc"];
}

<head>
    <link rel="stylesheet" href="~/css/Huespedes/Index.css" />
</head>

<div class="contenedor-principal">
    <div class="encabezado">
        <h2>Lista de Huéspedes</h2>
    </div>

    <form method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="searchCc" class="form-control" placeholder="Buscar por CC" value="@searchCc" />
            <button type="submit" class="btn btn-outline-primary">Buscar</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Limpiar</a>
        </div>
    </form>

    <div class="acciones">
        <a asp-action="Create" class="btn-crear">Crear Nuevo Huésped</a>
    </div>

    <div class="tabla-contenedor">
        <table class="tabla-estilizada">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Cchuesped)</th>
                    <th>@Html.DisplayNameFor(model => model.NombreHuesped)</th>
                    <th>@Html.DisplayNameFor(model => model.Correo)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Cchuesped)</td>
                        <td>@Html.DisplayFor(modelItem => item.NombreHuesped)</td>
                        <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Idhuesped" class="btn-accion editar">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Idhuesped" class="btn-accion detalles">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.Idhuesped" class="btn-accion eliminar"
                               onclick="return confirm('¿Estás seguro de eliminar este huésped?');">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
