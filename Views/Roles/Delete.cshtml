@model NewDawn.Models.Rol

@{
    ViewData["Title"] = "Eliminar Rol";
}

<h1 class="text-uppercase text-danger">Eliminar Rol</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h3 class="text-warning">¿Está seguro de que desea eliminar este rol?</h3>

<div class="card p-3 shadow-sm">
    <h4>Detalles del rol</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.NombreRol)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.NombreRol)
        </dd>
        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.EstadoRol)
        </dt>
        <dd class="col-sm-9">
            @(Model.EstadoRol ? "Activo" : "Inactivo")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Idrol" />
        <div class="mt-3">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
