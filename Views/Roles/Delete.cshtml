@model NewDawn.Models.Rol

@{
    ViewData["Title"] = "Eliminar Rol";
}

<head>
    <link rel="stylesheet" href="~/css/roles/delete.css" />
</head>

<body>
    <div class="form-container">
        <h1 class="form-title text-danger">Eliminar Rol</h1>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <p class="form-subtitle">¿Estás seguro de que deseas eliminar este rol?</p>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Idrol" />

            <div class="form-group">
                <label class="form-label">@Html.DisplayNameFor(model => model.NombreRol)</label>
                <input class="form-input" value="@Model.NombreRol" readonly />
            </div>

            <div class="form-group">
                <label class="form-label">@Html.DisplayNameFor(model => model.EstadoRol)</label>
                <input class="form-input" value="@(Model.EstadoRol ? "Activo" : "Inactivo")" readonly />
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-cancel">ELIMINAR</button>
                <a asp-action="Index" class="btn btn-danger">CANCELAR</a>
            </div>
        </form>
    </div>
</body>
