@model NewDawn.Models.Rol

@{
    ViewData["Title"] = "Detalles del Rol";
}

<head>
    <link rel="stylesheet" href="~/css/roles/details.css" />
</head>

<body>
    <div class="form-container">
        <h1 class="form-title">Detalles del Rol</h1>
        <p class="form-subtitle">Información registrada del rol en el sistema</p>

        <div class="form-group">
            <label class="form-label">@Html.DisplayNameFor(model => model.NombreRol)</label>
            <input class="form-input" value="@Model.NombreRol" readonly />
        </div>

        <div class="form-group">
            <label class="form-label">@Html.DisplayNameFor(model => model.EstadoRol)</label>
            <input class="form-input" value="@(Model.EstadoRol ? "Activo" : "Inactivo")" readonly />
        </div>

        <div class="form-actions">
            <a asp-action="Edit" asp-route-id="@Model?.Idrol" class="btn btn-cancel">EDITAR</a>
            <a asp-action="Index" class="btn btn-danger">VOLVER</a>
        </div>
    </div>
</body>
