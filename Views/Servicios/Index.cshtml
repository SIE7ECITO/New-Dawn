@model IEnumerable<NewDawn.Models.Servicio>

@{
    ViewData["Title"] = "Lista de Servicios";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Lista de Servicios</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Nuevo Servicio
    </a>
</div>

<table class="table table-striped table-hover shadow">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.NombreServicio)</th>
            <th>@Html.DisplayNameFor(model => model.DescripcionServicio)</th>
            <th>@Html.DisplayNameFor(model => model.ValorServicio)</th>
            <th>@Html.DisplayNameFor(model => model.FechaCreacion)</th>
            <th>@Html.DisplayNameFor(model => model.EstadoServicio)</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NombreServicio)</td>
                <td>@Html.DisplayFor(modelItem => item.DescripcionServicio)</td>
                <td>@Html.DisplayFor(modelItem => item.ValorServicio)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                <td>
                    <span class="badge @(item.EstadoServicio ? "bg-success" : "bg-danger")">
                        @(item.EstadoServicio ? "Activo" : "Inactivo")
                    </span>
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Idservicio" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Idservicio" class="btn btn-info btn-sm text-white">
                        <i class="fas fa-eye"></i> Ver
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Idservicio" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
