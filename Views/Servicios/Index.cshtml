@model IEnumerable<NewDawn.Models.Servicio>

@{
    ViewData["Title"] = "Lista de Servicios";
}

<!-- Enlace al CSS personalizado -->
<head>
    <link href="~/css/Servicios/Index.css" rel="stylesheet" />
</head>

<!-- Contenedor principal con fondo beige y bordes redondeados -->
<div class="contenedor-principal">

    <!-- Título centrado con estilo similar al encabezado de la imagen -->
    <div class="encabezado text-center mb-4">
        <h2>Listado de Servicios</h2>
    </div>

    <!-- Botón para crear nuevo servicio, alineado a la derecha como en la imagen -->
    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success btn-crear">Crear Nuevo</a>
    </div>

    <!-- Tabla estilizada como en la imagen -->
    <div class="tabla-contenedor">
        <table class="tabla-estilizada">
            <thead style="background-color: #113b4c; color: white;">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.NombreServicio)</th>
                    <th>@Html.DisplayNameFor(model => model.DescripcionServicio)</th>
                    <th>@Html.DisplayNameFor(model => model.ValorServicio)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaCreacion)</th>
                    <th>@Html.DisplayNameFor(model => model.EstadoServicio)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.NombreServicio)</td>
                        <td>@Html.DisplayFor(modelItem => item.DescripcionServicio)</td>
                        <td>@Html.DisplayFor(modelItem => item.ValorServicio)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                        <td>
                            <!-- Checkbox como estado, igual a la imagen -->
                            <input type="checkbox" class="estado-checkbox" disabled @(item.EstadoServicio ? "checked" : "") />
                        </td>
                        <td class="acciones">
                            <!-- Botones con estilos de colores como en la imagen -->
                            <a asp-action="Edit" asp-route-id="@item.Idservicio" class="btn btn-sm btn-primary">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Idservicio" class="btn btn-sm btn-info text-white">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.Idservicio" class="btn btn-sm btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
