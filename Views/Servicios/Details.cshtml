@model NewDawn.Models.Servicio

@{
    ViewData["Title"] = "Detalles del Servicio";
}

<head>
    <link href="~/css/Servicios/Details.css" rel="stylesheet" />
</head>

<div class="form-container">
    <h2 class="form-title">Detalles del Servicio</h2>
    <p class="form-subtitle">Información completa del servicio registrado.</p>

    <div class="form-group">
        <label class="form-label">Nombre del Servicio</label>
        <div class="form-value">@Model.NombreServicio</div>
    </div>

    <div class="form-group">
        <label class="form-label">Descripción</label>
        <div class="form-value">@Model.DescripcionServicio</div>
    </div>

    <div class="form-group">
        <label class="form-label">Valor</label>
        <div class="form-value">$@Model.ValorServicio</div>
    </div>

    <div class="form-group">
        <label class="form-label">Fecha de Creación</label>
        <div class="form-value">@Model.FechaCreacion.ToShortDateString()</div>
    </div>

    <div class="form-group">
        <label class="form-label">Estado</label>
        <div class="form-value">@(Model.EstadoServicio ? "Activo" : "Inactivo")</div>
    </div>

    <div class="form-actions">
        <a asp-action="Index" class="btn btn-cancel">VOLVER</a>
        <a asp-action="Edit" asp-route-id="@Model?.Idservicio" class="btn btn-danger">EDITAR</a>
    </div>
</div>
