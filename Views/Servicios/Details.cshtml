@model NewDawn.Models.Servicio

@{
    ViewData["Title"] = "Detalles del Servicio";
}

<head>
    <link href="~/css/Servicios/Details.css" rel="stylesheet" />
</head>

<div class="details-container">
    <h2>Detalles del Servicio</h2>
    <p class="subtext">Información completa del servicio registrado.</p>

    <div class="form-group">
        <label>NombreServicio</label>
        <input type="text" value="@Model.NombreServicio" readonly />
    </div>

    <div class="form-group">
        <label>DescripcionServicio</label>
        <textarea readonly>@Model.DescripcionServicio</textarea>
    </div>

    <div class="form-group">
        <label>ValorServicio</label>
        <input type="text" value="$@Model.ValorServicio" readonly />
    </div>

    <div class="form-group">
        <label>FechaCreacion</label>
        <input type="text" value="@Model.FechaCreacion.ToShortDateString()" readonly />
    </div>

    <div class="form-group">
        <label>EstadoServicio</label>
        <input type="text" value="@(Model.EstadoServicio ? "Activo" : "Inactivo")" readonly />
    </div>

    <div class="button-group">
        <a asp-action="Edit" asp-route-id="@Model?.Idservicio" class="btn-edit">EDITAR</a>
        <a asp-action="Index" class="btn-cancel">VOLVER</a>
    </div>
</div>
