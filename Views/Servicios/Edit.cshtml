@model NewDawn.Models.Servicio

@{
    ViewData["Title"] = "Editar Servicio";
}

<head>
    <link href="~/css/Servicios/Edit.css" rel="stylesheet" />
</head>

<div class="edit-container">
    <h2>Editar Servicio</h2>
    <p class="subtext">Modifica los datos necesarios y guarda los cambios.</p>

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="Idservicio" />

        <div class="form-group">
            <label asp-for="NombreServicio"></label>
            <input asp-for="NombreServicio" />
            <span asp-validation-for="NombreServicio" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DescripcionServicio"></label>
            <textarea asp-for="DescripcionServicio" rows="3"></textarea>
            <span asp-validation-for="DescripcionServicio" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ValorServicio"></label>
            <input asp-for="ValorServicio" type="number" step="0.01" min="0" />
            <span asp-validation-for="ValorServicio" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FechaCreacion"></label>
            <input asp-for="FechaCreacion" type="date" />
            <span asp-validation-for="FechaCreacion" class="text-danger"></span>
        </div>

        <div class="form-check-group">
            <input type="checkbox" asp-for="EstadoServicio" />
            <label asp-for="EstadoServicio">Activo</label>
        </div>

        <div class="button-group">
            <button type="submit" class="btn-save">GUARDAR</button>
            <a asp-action="Index" class="btn-cancel">CANCELAR</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
