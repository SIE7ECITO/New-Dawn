@model NewDawn.Models.Servicio

@{
    ViewData["Title"] = "Crear Servicio";
}

<head>
	<link rel="stylesheet" href="~/css/Servicios/Create.css" />
</head>

<!-- Contenedor principal del formulario -->
<div class="formulario-container">

    <!-- Encabezado del formulario -->
    <div class="formulario-header">
        <h2>Crear Servicio</h2>
    </div>

    <!-- Formulario de creación -->
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="error" role="alert"></div>

        <!-- Campo: Nombre del servicio -->
        <div class="campo-formulario">
            <label asp-for="NombreServicio"></label>
            <input asp-for="NombreServicio" class="input" placeholder="Nombre del servicio" />
            <span asp-validation-for="NombreServicio" class="error"></span>
        </div>

        <!-- Campo: Descripción -->
        <div class="campo-formulario">
            <label asp-for="DescripcionServicio"></label>
            <textarea asp-for="DescripcionServicio" class="input" placeholder="Descripción del servicio" rows="3"></textarea>
            <span asp-validation-for="DescripcionServicio" class="error"></span>
        </div>

        <!-- Campo: Valor -->
        <div class="campo-formulario">
            <label asp-for="ValorServicio"></label>
            <input asp-for="ValorServicio" type="number" class="input" placeholder="Valor del servicio" min="0" step="0.01" />
            <span asp-validation-for="ValorServicio" class="error"></span>
        </div>

        <!-- Campo: Fecha de creación -->
        <div class="campo-formulario">
            <label asp-for="FechaCreacion"></label>
            <input asp-for="FechaCreacion" type="date" class="input" value="@DateTime.Now.ToString("yyyy-MM-dd")" readonly />
            <span asp-validation-for="FechaCreacion" class="error"></span>
        </div>

        <!-- Botón de crear -->
        <div class="boton-container">
            <button type="submit" class="btn-principal">CREAR</button>
        </div>

        <!-- Enlace para volver -->
        <div class="volver-atras">
            <a asp-action="Index">Volver Atrás</a>
        </div>
    </form>
</div> mm pkm



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
