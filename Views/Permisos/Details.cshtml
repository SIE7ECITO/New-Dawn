@model NewDawn.Models.Permiso

@{
    ViewData["Title"] = "Detalles del Permiso";
}

<head>
    <link rel="stylesheet" href="~/css/Permisos/details.css" />
</head>

<div class="contenedor-formulario">
    <div class="contenedor-dentro">
        <div class="formulario-header">
            <h2>Detalles del Permiso</h2>
        </div>

        <div class="formulario-cuerpo">
            <div class="grupo-formulario">
                <label>Nombre:</label>
                <div class="campo-detalle">
                    @Html.DisplayFor(model => model.NombrePermiso)
                </div>
            </div>

            <div class="grupo-formulario">
                <label>Descripción:</label>
                <div class="campo-detalle">
                    @Html.DisplayFor(model => model.DescripcionPermiso)
                </div>
            </div>

            <div class="grupo-formulario">
                <label>Estado:</label>
                <div class="campo-detalle">
                    @Html.DisplayFor(model => model.EstadoPermisos)
                </div>
            </div>

            <div class="grupo-formulario">
                <label>Fecha de Cambio:</label>
                <div class="campo-detalle">
                    @Html.DisplayFor(model => model.FechaCambio)
                </div>
            </div>

            <div class="botonera">
                <a asp-action="Edit" asp-route-id="@Model?.Idpermisos" class="btn-formulario">Editar</a>
            </div>

            <div class="volver">
                <a asp-action="Index">Volver a la lista</a>
            </div>
        </div>
    </div>
</div>
