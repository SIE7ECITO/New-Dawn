@model NewDawn.Models.Permiso

@{
    ViewData["Title"] = "Eliminar Permiso";
}

<head>
    <link rel="stylesheet" href="~/css/Permisos/delete.css" />
</head>

<div class="contenedor-principal">
    <div class="contenedor-dentro">
        <div class="encabezado-formulario">
            <h2 class="titulo-formulario text-danger">Eliminar Permiso</h2>
            <p class="mensaje-confirmacion">¿Estás seguro de que deseas eliminar este permiso?</p>
        </div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alerta-error">
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="cuerpo-formulario">
            <div class="grupo-campo">
                <label class="etiqueta-campo">@Html.DisplayNameFor(model => model.NombrePermiso)</label>
                <div class="valor-campo">
                    @Html.DisplayFor(model => model.NombrePermiso)
                </div>
            </div>

            <div class="grupo-campo">
                <label class="etiqueta-campo">@Html.DisplayNameFor(model => model.DescripcionPermiso)</label>
                <div class="valor-campo">
                    @Html.DisplayFor(model => model.DescripcionPermiso)
                </div>
            </div>

            <div class="grupo-campo">
                <label class="etiqueta-campo">@Html.DisplayNameFor(model => model.EstadoPermisos)</label>
                <div class="valor-campo">
                    @(Model.EstadoPermisos ? "Activo" : "Inactivo")
                </div>
            </div>

            <div class="grupo-campo">
                <label class="etiqueta-campo">@Html.DisplayNameFor(model => model.FechaCambio)</label>
                <div class="valor-campo">
                    @Html.DisplayFor(model => model.FechaCambio)
                </div>
            </div>

            <form asp-action="Delete" class="formulario-botones">
                <input type="hidden" asp-for="Idpermisos" />
                <button type="submit" class="boton boton-rojo">Eliminar</button>
                <a asp-action="Index" class="boton boton-gris">Cancelar</a>
            </form>
        </div>
    </div>
</div>
