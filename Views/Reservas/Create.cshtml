@model NewDawn.Models.Reserva
@{
    ViewData["Title"] = "Crear Reserva";
}

<h1>Crear Reserva</h1>

<h4>Detalles de la Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Usuario -->
            <div class="form-group">
                <label asp-for="Idusuario" class="control-label"></label>
                <select asp-for="Idusuario" class="form-control" asp-items="ViewBag.Idusuario"></select>
            </div>

            <!-- Habitaciones -->
            <div class="form-group">
                <label>Seleccionar Habitaciones</label>
                <select class="form-control" name="habitacionesSeleccionadas" multiple="multiple" asp-items="ViewBag.Idhabitacion">
                    <option value="">Seleccione habitaciones</option>
                </select>
            </div>

            <!-- Paquete -->
            <div class="form-group">
                <label asp-for="Idpaquete" class="control-label"></label>
                <select asp-for="Idpaquete" class="form-control" asp-items="ViewBag.Idpaquete">
                    <option value="">Seleccione un paquete (opcional)</option>
                </select>
            </div>

            <!-- Servicios (Solo si se selecciona un paquete) -->
            <div class="form-group" id="servicios-container" style="display:none;">
                <label>Seleccionar Servicios</label>
                <select name="selectedServices" class="form-control" multiple="multiple" asp-items="ViewBag.Servicios">
                    <option value="">Seleccione servicios adicionales</option>
                </select>
            </div>

            <!-- Pago -->
            <div class="form-group">
                <label asp-for="Idpago" class="control-label"></label>
                <select asp-for="Idpago" class="form-control" asp-items="ViewBag.Idpago"></select>
            </div>

            <!-- Fechas -->
            <div class="form-group">
                <label asp-for="FechaReserva" class="control-label"></label>
                <input asp-for="FechaReserva" class="form-control" type="date" />
                <span asp-validation-for="FechaReserva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaComienzo" class="control-label"></label>
                <input asp-for="FechaComienzo" class="form-control" type="date" />
                <span asp-validation-for="FechaComienzo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" class="form-control" type="date" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" asp-for="EstadoReserva" />
                    @Html.DisplayNameFor(model => model.EstadoReserva)
                </label>
            </div>


            <!-- Botón de envío -->
            <div class="form-group">
                <input type="submit" value="Crear Reserva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

<script>
    // Mostrar los servicios cuando se selecciona un paquete
    $(document).ready(function () {
        $("select[name='Idpaquete']").change(function () {
            var selectedPaquete = $(this).val();
            if (selectedPaquete) {
                $("#servicios-container").slideDown();
            } else {
                $("#servicios-container").slideUp();
            }
        });
    });
</script>
