@model NewDawn.Models.Reserva


@{
    ViewData["Title"] = "Eliminar Reserva";
}

<head>
    <link rel="stylesheet" href="~/css/Reservas/Delete.css" />
</head>

<div class="form-container">
    <h1 class="form-title">@ViewData["Title"]</h1>
    <p class="form-subtitle">¿Está seguro que desea eliminar esta reserva?</p>

    <input type="hidden" asp-for="Idreserva" />

    <div class="form-group">
        <label class="form-label">Fecha de Comienzo</label>
        <div class="form-value">@Model.FechaComienzo</div>
    </div>

    <div class="form-group">
        <label class="form-label">Fecha de Fin</label>
        <div class="form-value">@Model.FechaFin</div>
    </div>

    <div class="form-group">
        <label class="form-label">Usuario</label>
        <div class="form-value">@Model.IdusuarioNavigation?.NombreUsuario ?? "Usuario no disponible"</div>
    </div>

    <div class="form-group">
        <label class="form-label">Estado de la Reserva</label>
        <div class="form-value">@(Model.EstadoReserva ? "Activa" : "Cancelada")</div>
    </div>

    <div class="form-group">
        <label class="form-label">Valor Total</label>
        <div class="form-value">@Model.ValorTotal.ToString("C")</div>
    </div>

    <form asp-action="Delete" method="post" class="form-actions">
        <input type="hidden" asp-for="Idreserva" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-cancel">Cancelar</a>
    </form>
</div>