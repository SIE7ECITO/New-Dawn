@model Reserva

@{
    ViewData["Title"] = "Eliminar Reserva";
}

<h1>@ViewData["Title"]</h1>

<h3>¿Está seguro que desea eliminar esta reserva?</h3>
<div>
    <h4>Reserva</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Fecha de Comienzo
        </dt>
        <dd class="col-sm-10">
            @Model.FechaComienzo
        </dd>
        <dt class="col-sm-2">
            Fecha de Fin
        </dt>
        <dd class="col-sm-10">
            @Model.FechaFin
        </dd>
        <dt class="col-sm-2">
            Usuario
        </dt>
        <dd class="col-sm-10">
            @Model.IdusuarioNavigation.NombreUsuario
        </dd>
        <dt class="col-sm-2">
            Estado de la Reserva
        </dt>
        <dd class="col-sm-10">
            @(Model.EstadoReserva ? "Activa" : "Cancelada")
        </dd>
        <dt class="col-sm-2">
            Valor Total
        </dt>
        <dd class="col-sm-10">
            @Model.ValorTotal.ToString("C")
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Idreserva" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
