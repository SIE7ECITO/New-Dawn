@model IEnumerable<NewDawn.Models.Reserva>

@{
    ViewData["Title"] = "Listado de Reservas";
}

<head>
    <link href="./css/Reservas/Index.css" rel="stylesheet" />
</head>

<div class="contenedor-principal">
    <div class="encabezado">
        <h2>Listado de Reservas</h2>
    </div>
    <div class="acciones">
        <a asp-action="Create" class="btn-crear">
            Crear Nueva Reserva
        </a>
    </div>

    <div class="tabla-contenedor">
        <table class="tabla-estilizada">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Fecha de Reserva</th>
                    <th>Usuario</th>
                    <th>Paquete</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reserva in Model)
                {
                    <tr>
                        <td>@reserva.Idreserva</td>
                        <td>@reserva.FechaReserva.ToString("dd/MM/yyyy")</td>
                        <td>@reserva.IdusuarioNavigation?.NombreUsuario @reserva.IdusuarioNavigation?.Apellido</td>
                        <td>@reserva.IdpaqueteNavigation?.NombrePaquete</td>
                        <td>@(reserva.EstadoReserva ? "Activa" : "Cancelada")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@reserva.Idreserva" class="btn-accion editar">Editar</a>
                            <a asp-action="Details" asp-route-id="@reserva.Idreserva" class="btn-accion detalles">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@reserva.Idreserva" class="btn-accion eliminar">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
