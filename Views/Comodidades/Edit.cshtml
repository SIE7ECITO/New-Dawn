@model NewDawn.Models.Comodidades

@{
    ViewData["Title"] = "Editar Comodidad";
}

<head>
    <link rel="stylesheet" href="~/css/Comodidades/Edit.css" />
</head>

<body>
    <div class="contenedor-formulario">
        <h1 class="text-uppercase text-primary">Editar Comodidad</h1>

        <div class="card p-3 shadow-sm">
            <h4>Modificar Información</h4>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="IdComodidades" />

                        <div class="mb-3">
                            <label asp-for="NombreComodidades" class="form-label fw-bold"></label>
                            <input asp-for="NombreComodidades" class="form-control" />
                            <span asp-validation-for="NombreComodidades" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DescripcionComodidad" class="form-label fw-bold"></label>
                            <input asp-for="DescripcionComodidad" class="form-control" />
                            <span asp-validation-for="DescripcionComodidad" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" asp-for="EstadoComodidad" />
                            <label class="form-check-label fw-bold">
                                @Html.DisplayNameFor(model => model.EstadoComodidad)
                            </label>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">Guardar Cambios</button>
                            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
