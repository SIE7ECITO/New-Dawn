@model IEnumerable<NewDawn.Models.Comodidade>

@{
    ViewData["Title"] = "Lista de Comodidades";
}

<h1 class="text-primary">Lista de Comodidades</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Crear Nueva Comodidad
    </a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.NombreComodidades)</th>
                <th>@Html.DisplayNameFor(model => model.DescripcionComodidad)</th>
                <th>@Html.DisplayNameFor(model => model.EstadoComodidad)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NombreComodidades)</td>
                    <td>@Html.DisplayFor(modelItem => item.DescripcionComodidad)</td>
                    <td>
                        @if (item.EstadoComodidad)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactivo</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.IdComodidades" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.IdComodidades" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.IdComodidades" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>