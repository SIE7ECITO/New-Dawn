@model NewDawn.Models.Comodidade

@{
    ViewData["Title"] = "Eliminar Comodidad";
}

<h1 class="text-uppercase text-danger">Eliminar Comodidad</h1>

<h3 class="text-warning">¿Está seguro de que desea eliminar esta comodidad?</h3>

<div class="card p-3 shadow-sm">
    <h4>Detalles de la comodidad</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.NombreComodidades)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.NombreComodidades)
        </dd>
        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.DescripcionComodidad)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.DescripcionComodidad)
        </dd>
        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.EstadoComodidad)
        </dt>
        <dd class="col-sm-9">
            @(Model.EstadoComodidad ? "Activo" : "Inactivo")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdComodidades" />
        <div class="mt-3">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
