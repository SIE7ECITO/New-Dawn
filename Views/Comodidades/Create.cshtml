@model NewDawn.Models.Comodidades

@{
    ViewData["Title"] = "Crear Comodidad";
}

<h1>Crear Comodidad</h1>

<h4>Detalles de la comodidad</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NombreComodidades" class="control-label">Nombre</label>
                <input asp-for="NombreComodidades" class="form-control" placeholder="Ingrese el nombre..." />
                <span asp-validation-for="NombreComodidades" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DescripcionComodidad" class="control-label">Descripción</label>
                <input asp-for="DescripcionComodidad" class="form-control" placeholder="Ingrese la descripción..." />
                <span asp-validation-for="DescripcionComodidad" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input class="form-check-input" asp-for="EstadoComodidad" />
                <label class="form-check-label" asp-for="EstadoComodidad">Estado activo</label>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-success">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
