@model NewDawn.Models.Habitacion

@{
    ViewData["Title"] = "Editar Habitación";
}

<head>
    <link href="~/css/Habitaciones/Edit.css" rel="stylesheet" />
</head>

<body>
    <div class="contenedor-formulario">
        <div class="formulario-header">
            <h2>Editar Habitación</h2>
        </div>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="texto-error"></div>
            <input type="hidden" asp-for="Idhabitacion" />

            <div class="grupo-formulario">
                <label asp-for="TipoHabitacion"></label>
                <input asp-for="TipoHabitacion" class="entrada" />
                <span asp-validation-for="TipoHabitacion" class="texto-error"></span>
            </div>

            <div class="grupo-formulario">
                <label class="control-label">Estado</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="EstadoHabitacion" />
                    <label class="form-check-label">
                        @(Model.EstadoHabitacion ? "Disponible" : "No Disponible")
                    </label>
                </div>
            </div>

            <div class="grupo-formulario">
                <label asp-for="PrecioNoche"></label>
                <input asp-for="PrecioNoche" class="entrada" type="number" step="0.01" min="0" />
                <span asp-validation-for="PrecioNoche" class="texto-error"></span>
            </div>

            <div class="grupo-formulario">
                <label class="control-label">Incluye en Paquete</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="EnPaquete" />
                    <label class="form-check-label">
                        @(Model.EnPaquete ? "Sí" : "No")
                    </label>
                </div>
            </div>

            <div class="grupo-formulario">
                <label asp-for="Capacidad"></label>
                <input asp-for="Capacidad" class="entrada" type="number" min="1" />
                <span asp-validation-for="Capacidad" class="texto-error"></span>
            </div>

            <!-- Comodidades -->
            <div class="grupo-formulario">
                <label class="control-label">Comodidades</label>
                <div class="border p-3 rounded" style="background-color: #f9f9f9;">
                    @foreach (var comodidad in ViewBag.Comodidades)
                    {
                        bool isChecked = Model.HabitacionComodidades.Any(hc => hc.IdComodidades == comodidad.IdComodidades);
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="selectedComodidades" value="@comodidad.IdComodidades" @(isChecked ? "checked" : "") />
                            <label class="form-check-label">@comodidad.DescripcionComodidad</label>
                        </div>
                    }
                </div>
            </div>

            <div class="botonera">
                <button type="submit" class="btn-formulario">Guardar Cambios</button>
            </div>

            <div class="volver">
                <a asp-action="Index">← Cancelar</a>
            </div>
        </form>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
