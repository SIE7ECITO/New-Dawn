@model NewDawn.Models.Habitacion

@{
    ViewData["Title"] = "Crear Habitación";
}

<h1>Crear Habitación</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="TipoHabitacion" class="control-label"></label>
                <input asp-for="TipoHabitacion" class="form-control" />
                <span asp-validation-for="TipoHabitacion" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input class="form-check-input" asp-for="EstadoHabitacion" />
                <label class="form-check-label" asp-for="EstadoHabitacion"></label>
            </div>

            <div class="form-group">
                <label asp-for="PrecioNoche" class="control-label"></label>
                <input asp-for="PrecioNoche" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="PrecioNoche" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input class="form-check-input" asp-for="EnPaquete" />
                <label class="form-check-label" asp-for="EnPaquete"></label>
            </div>

            <div class="form-group">
                <label asp-for="Capacidad" class="control-label"></label>
                <input asp-for="Capacidad" class="form-control" type="number" />
                <span asp-validation-for="Capacidad" class="text-danger"></span>
            </div>

            <!-- Sección de Comodidades -->
            <div class="form-group">
                <label class="control-label">Comodidades</label>
                <div>
                    @foreach (var comodidad in ViewBag.Comodidades)
                    {
                        <div class="form-check">
                            <input type="checkbox" name="ComodidadesSeleccionadas" value="@comodidad.IdComodidades" class="form-check-input" id="comodidad_@comodidad.IdComodidades">
                            <label class="form-check-label" for="comodidad_@comodidad.IdComodidades">@comodidad.NombreComodidades</label>
                        </div>
                    }
                </div>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
